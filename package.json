{
	"name": "thoughtpad",
	"displayName": "ThoughtPad",
	"description": "Capture your thoughts without leaving your code.",
	"publisher": "brb3",
	"license": "MIT",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:thoughtpad.captureThought",
		"onView:thoughts-tree"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "thoughtpad.captureThought",
				"title": "Capture a Thought"
			},
			{
				"command": "thoughtpad.copyEntry",
				"title": "Copy"
			},
			{
				"command": "thoughtpad.deleteEntry",
				"title": "Delete"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "thoughtpad-explorer",
					"title": "ThoughtPad",
					"icon": "assets/thoughtpad.svg"
				}
			]
		},
		"views": {
			"thoughtpad-explorer": [
				{
					"id": "thoughts-tree",
					"name": ""
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "thoughtpad.copyEntry",
					"when": "view == thoughts-tree && viewItem == thoughtTreeItem"
				},
				{
					"command": "thoughtpad.deleteEntry",
					"when": "view == thoughts-tree && viewItem == thoughtTreeItem"
				}
			]
		},
		"keybindings": [
			{
				"command": "workbench.view.extension.thoughtpad-explorer",
				"key": "ctrl+shift+a",
				"mac": "cmd+shift+a"
			},
			{
				"command": "thoughtpad.captureThought",
				"key": "ctrl+k t",
				"mac": "cmd+k t"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"uuid": "8.3.2"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "^14.18.11",
		"@types/uuid": "8.3.4",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^5.11.0",
		"@typescript-eslint/parser": "^5.11.0",
		"@vscode/test-electron": "^2.0.3",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4"
	},
	"prettier": {
		"useTabs": true,
		"printWidth": 100
	}
}
