{
  "name": "thoughtpad",
	"displayName": "ThoughtPad",
	"description": "Capture your thoughts without leaving your code.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:thoughtpad.thoughtAboutDay",
		"onView:thoughts-tree"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "thoughtpad.thoughtAboutDay",
				"title": "Record thought about Today"
			},
			{
				"command": "thoughtpad.deleteEntry",
				"title": "Delete"
			}
		],
        "configuration": [
            {
                "title": "ThoughtPad",
                "properties": {
                    "thoughtpad.thoughtsFile": {
                        "type": "string", 
                        "default": "",
                        "description": "Specifies the file where ThoughtPad will store your daily Thoughts. This should be an absolute path. Thoughts are stored as a JSON object."
                    }
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "thoughtpad-explorer",
                    "title": "ThoughtPad",
                    "icon": "assets/thoughtpad.svg"
                }
            ]
        },
        "views": {
            "thoughtpad-explorer": [
                {
                    "id": "thoughts-tree",
					"name": ""
                }
            ]
        },
		"menus": {
			"view/item/context": [
				{
					"command": "thoughtpad.deleteEntry",
					"when": "view == thoughts-tree && viewItem == thoughtTreeItem"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"uuid": "8.3.2"
	},
	"devDependencies": {
		"@types/vscode": "^1.64.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/uuid": "8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	},
	"prettier": {
		"useTabs": true,
		"printWidth": 100
	}
}
